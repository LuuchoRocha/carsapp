<!DOCTYPE html>
<head>
    <meta http-equiv="Content-Type" content="text/html;charset=utf-8" />
    <link rel="stylesheet" type="text/css" href="style.css" />
    <title>CARSAPP - Index</title>
    <script type="text/javascript" src="jquery.js"></script>
    <script type="text/javascript" src="jquery.getParams.js"></script>
    <script type="text/javascript" src="ajax.js"></script>
    <script type="text/javascript">
        function reactivarFields() {
            document.getElementById("doors").disabled = true;
        }        
        function mostrarCuerpo(){
            var perms = {{perms}};
            var login = document.getElementById("login");
            var usercp = document.getElementById("usercp");
            var admincp = document.getElementById("admincp");
            var newadmin = document.getElementById("newadmin");
            switch(perms){
                case 0: 
                        usercp.parentNode.removeChild(usercp);
                        admincp.parentNode.removeChild(admincp);
                        newadmin.parentNode.removeChild(newadmin);
                        break;
                case 1:
                        login.parentNode.removeChild(login);
                        admincp.parentNode.removeChild(admincp);
                        newadmin.parentNode.removeChild(newadmin);
                        break;
                case 2:
                        usercp.parentNode.removeChild(usercp);
                        login.parentNode.removeChild(login);
                        newadmin.parentNode.removeChild(newadmin);
                        break;
                case 3:
                        usercp.parentNode.removeChild(usercp);
                        login.parentNode.removeChild(login);
                        break;
            }
            document.getElementById("cuerpo").style.visibility="visible";
        }
    </script>
</head>
<body onload="mostrarCuerpo()">
